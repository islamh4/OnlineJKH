@model OnlineJKH.DAL.Entities.MeterReading
@{
    ViewData["Title"] = "Изменение";
}
@using (Html.BeginForm("Edit", "MeterReading", FormMethod.Post))
{
    @Html.LabelFor(m => m.IndicationValue)
    <br />
    @Html.TextBoxFor(m => m.IndicationValue)
    <br />
    @Html.ValidationMessageFor(m => m.IndicationValue)
    <br />
    @Html.LabelFor(m => m.PersonalAccount.Number)
