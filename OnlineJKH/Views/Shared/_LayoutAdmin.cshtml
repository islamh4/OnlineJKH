<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineJKH.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluidw" style="margin-left: 20px;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Онлайн-ЖКХ</a>
                <a class="navbar-brand" asp-area="" asp-controller="MeterReading" asp-action="Index">Показание счётчиков</a>
                <a class="navbar-brand" asp-area="" asp-controller="Receipt" asp-action="Index">Квитанция</a>
                <div class="dropdown navbar-brand">
                    <a class="dropbtn" style="color: black;">Администрирование</a>
                    <div class="dropdown-content">
                        <a href="/PersonalAccount/Index" style="color:black;">Лицевые счета</a>
                        <a href="/User/Index" style="color:black;">Пользователи</a>
                        <a href="/Home/ExportExcel" style="color:black;" download="FileAdmin">Экспорт Excel</a>
                    </div>
                </div>
                <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Logout">Выйти</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - OnlineJKH - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    container-fluidw{
        display: flex;
        flex-wrap: inherit;
        align-items: center;
        justify-content: space-between;
    }
</style>